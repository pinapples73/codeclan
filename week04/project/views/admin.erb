<h2>Artists</h2>


<p>
  <form method="get" action="/artist/add">
    <input type="submit"  value="Add Artist">
  </form>
</p>
<hr>

<%  for artist in @artists %>
  <p>Name: <%= artist.first_name %> <%= artist.last_name %></p>
  <form method="post" action="/artist/<%= artist.id %>/delete">
    <input type="submit"  value="Delete Artist">
  </form>
  <hr>
<% end %>

<p>
  <form method="get" action="/artist/add">
    <input type="submit"  value="Add Artist">
  </form>
</p>
<hr>


<h2>Artworks</h2>
<p>
  <form method="get" action="/artwork/add">
    <input type="submit"  value="Add Artwork">
  </form>

</p>
<hr>

<%  for artwork in @artworks %>
  <p>ID: <%= artwork.id %></p>
  <p>Title: <%= artwork.title %></p>
  <p>Details: <%= artwork.details %> </p>
  <p>Date Created: <%= artwork.date_created %> </p>
  <% for artist in @artists %>
    <% if artist.id == artwork.artist_id %>
      <p>Artist: <%= artist.first_name %> <%= artist.last_name %></p>
    <% end %>
  <% end %>
  <% for category in @categories %>
    <% if artwork.category_id == category.id %>
      <p>Category: <%= category.type.capitalize %></p>
    <% end %>
  <% end %>
  <form method="post" action="/artwork/<%= artwork.id %>/delete">
    <input type="submit"  value="Delete Artwork">
  </form>
  <form method="get" action="/artwork/<%=artwork.id%>/edit">
    <input type="submit"  value="Edit Artwork">
  </form>
  <hr>
<% end %>
